mixin checkboxButtons(chvalue1, chvalue2, chvalue3)
	fieldset
		each item in [chvalue1, chvalue2, chvalue3]
			label
				.fieldset-line
					input(type='checkbox')
					.div
						.md-mag.material-icons.md-border checkbox_marked_outline
					.md-mag.rect.opacity
					.text_body.color.line=item
					
	// - 
		label
			.fieldset-line
				input(type='checkbox' checked)
				.div
					.md-mag.material-icons.md-border checkbox_marked_outline
				.md-mag.rect.opacity
				.text_body.color.line=chvalue2
			
		label
			.fieldset-line
				input(type='checkbox' checked)
				.div
					.md-mag.material-icons.md-border checkbox_marked_outline
				.md-mag.rect.opacity
				.text_body.color.line=chvalue3
	//