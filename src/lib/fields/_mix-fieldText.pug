mixin fieldTextButtonDown(ftype, fname, ftextDefault)
	.layoutFieldDropdown
		+fieldText('text', fname, ftextDefault)
		button(type=ftype).material-icons expand_more
		
mixin fieldTextButtonRight(ftype, fname, ftextDefault)
	.layoutFieldDropdown
		+fieldText('text', fname, ftextDefault)
		button(type=ftype).material-icons arrow_forward		